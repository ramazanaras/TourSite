@model TourSite.Models.SayfaResimleri



@{
    ViewBag.Title = "Resim Ekle";
}
<h2>Resim Ekle</h2>
@using (Html.BeginForm("resimekle", "Sayfa", new { sayfaid = @Request.Params["sayfaid"] }, FormMethod.Post, new { encType = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-horizontal">
                <h4>Resimler</h4>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.resimadi, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.resimadi, new { @class = "form-control", type = "file", required = "required" })
                        @Html.ValidationMessageFor(model => model.resimadi)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Ekle" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Resim listesi", "resimler", new { sayfaid = @Request.Params["sayfaid"] }, new { @class = "btn btn-link" })
</div>
