@model IEnumerable<TourSite.UI.Models.Sayfa>
@{
    ViewBag.Title = "menu";
}






<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Application Name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav pull-right">
               
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("index", "home")">Anasayfa</a>
                </li>

                <li class="nav-item"> <a class="nav-link" href="@Url.Action("index", "tur")">Turlar</a> </li>

                @if (Model != null)
                {
                    foreach (var kayit in Model)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("goster", "sayfa", new { sayfa = kayit.link })">
                                @kayit.baslik
                        </a>
                    </li>
                    }
                }


            </ul>
        </div>
    </div>
</div>
